<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_wiki_layout"

    tools:context=".WikiFragment">

    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/wikiTitle"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_above="@+id/wikiArticle"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/scrolled_wiki"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/WikiSummary"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_above="@+id/wikiArticle"
                    android:layout_centerHorizontal="true"
                    android:gravity="left"
                    android:text="Summary"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/wikiArticle"
                    android:layout_width="match_parent"
                    android:layout_height="279dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="12dp"
                    android:gravity="left"
                    android:scrollbars="vertical"
                    android:text="@string/wikiArticleText"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textSize="10sp" />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/wikiOpenSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="34dp"
        android:layout_marginEnd="34dp"
        android:layout_marginRight="34dp"
        android:clickable="true"
        android:src="@android:drawable/ic_menu_search" />

</RelativeLayout>